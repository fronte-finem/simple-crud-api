{
  "name": "simple-crud-api",
  "author": "fronte-finem",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "start:dev": "nodemon --watch src --require dotenv/config ./src/index.js",
    "start:prod": "npm run build && node --require dotenv/config ./dist/bundle.js",
    "build": "webpack --mode=production --node-env=production",
    "lint": "eslint --fix ./",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "webpack": "^5.64.2",
    "webpack-cli": "^4.9.1"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  }
}
